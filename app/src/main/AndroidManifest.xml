<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.system.musicplayer">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AlbumsActivity"
            android:label="@string/category_album"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ArtistActivity"
            android:label="@string/category_artist"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".GenreActivity"
            android:label="@string/category_genre"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".PlaylistActivity"
            android:label="@string/category_playlist"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".SongsActivity"
            android:label="@string/category_songs"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".NowplayingActivity"
            android:label="@string/category_nowPlaying"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".StreamActivity"
            android:label="@string/category_Stream"
            android:parentActivityName=".MainActivity"/>

    </application>

</manifest>